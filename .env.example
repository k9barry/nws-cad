# Database Configuration
# Supported values: mysql, pgsql
DB_TYPE=mysql

# Backup configuration
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30

# MySQL Configuration (used when DB_TYPE=mysql)
MYSQL_HOST=mysql
MYSQL_ROOT_PASSWORD=root_password_change_me
MYSQL_DATABASE=nws_cad
MYSQL_USER=nws_user
MYSQL_PASSWORD=nws_password_change_me
MYSQL_PORT=3306

# PostgreSQL Configuration (used when DB_TYPE=pgsql)
POSTGRES_HOST=postgres
POSTGRES_DB=nws_cad
POSTGRES_USER=nws_user
POSTGRES_PASSWORD=nws_password_change_me
POSTGRES_PORT=5432

# PHP Configuration
PHP_VERSION=8.3
PHP_MEMORY_LIMIT=512M

# Application Configuration
APP_ENV=development
APP_DEBUG=true
APP_LOGS_ENABLED=true
WATCH_FOLDER=/var/www/watch
LOG_LEVEL=debug

# File Watcher Configuration
WATCHER_INTERVAL=5
WATCHER_FILE_PATTERN=*.xml

# Dozzle Configuration (Docker Log Viewer)
# SECURITY: Set username and password for production environments
DOZZLE_PORT=9999
DOZZLE_USERNAME=
DOZZLE_PASSWORD=
